<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.fhtw.tourplanner.view.SearchBarController"
      spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 10 10 10;">
    <Label text="Search:" />
    <TextField fx:id="searchTextField" HBox.hgrow="ALWAYS" promptText="Search tours and logs..."/>
    <ComboBox fx:id="searchScopeComboBox" prefWidth="120">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="All" />
                <String fx:value="Tours Only" />
                <String fx:value="Logs Only" />
            </FXCollections>
        </items>
        <value>
            <String fx:value="All" />
        </value>
    </ComboBox>
    <Button fx:id="searchButton" text="Search" onAction="#onSearchButton"/>
    <Button fx:id="clearButton" text="Clear" onAction="#onClearButton"/>
</HBox>