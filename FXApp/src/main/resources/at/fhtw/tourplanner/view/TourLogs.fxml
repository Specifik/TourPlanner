<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.fhtw.tourplanner.view.TourLogsController">
    <ToolBar>
        <Label text="Tour Logs"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="+" onAction="#onButtonAddLog">
            <tooltip>
                <Tooltip text="Add new log entry"/>
            </tooltip>
        </Button>
        <Button text="-" onAction="#onButtonRemoveLog">
            <tooltip>
                <Tooltip text="Remove selected log entry"/>
            </tooltip>
        </Button>
        <Button text="âœŽ" onAction="#onButtonEditLog">
            <tooltip>
                <Tooltip text="Edit selected log entry"/>
            </tooltip>
        </Button>
    </ToolBar>
    <TableView fx:id="tourLogsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
            <TableColumn fx:id="difficultyColumn" text="Difficulty" prefWidth="80"/>
            <TableColumn fx:id="totalTimeColumn" text="Time (min)" prefWidth="80"/>
            <TableColumn fx:id="totalDistanceColumn" text="Distance (km)" prefWidth="80"/>
            <TableColumn fx:id="ratingColumn" text="Rating" prefWidth="60"/>
            <TableColumn fx:id="commentColumn" text="Comment" prefWidth="200"/>
        </columns>
    </TableView>
</VBox>